@page "/Games"
@inject IGamesHttpRepository _gamesHttpRepository
@using MinimalSetGame.Client.HttpRepositories.Interfaces
@using MinimalSetGame.Contracts

<h3>Games</h3>

<div class="row">
    <div class="col-md-10">
        @*Place for search and sort*@
    </div>
    <div class="col-md-2">
        <button>New Game</button>
    </div>
</div>
<ul>
    @foreach (var game in _games)
    {
        <li>Id: @game.Id</li>
    }
</ul>
<div class="row">
    <div class="col">
        @*Place for pagination*@
    </div>
</div>

@code {
    List<GameResponse> _games = [];

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        _games = await _gamesHttpRepository.GetGames();
    }

}
